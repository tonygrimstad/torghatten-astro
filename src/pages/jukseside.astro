---
import Layout from "../layouts/Layout.astro";
---

<Layout title="jukseside" lang="no" light={true}>
  <section class="max-w-6xl mx-auto py-16 px-4">
    <h1 class="text-4xl font-bold mb-10 text-center">
      🛠️ Jukseside for Tailwind
    </h1>

    <!-- Layout & spacing -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">📏 Layout & Spacing</h2>
      <ul class="list-disc ml-6 text-sm leading-loose">
        <li><code>flex</code>, <code>grid</code>, <code>block</code></li>
        <li>
          <code>mx-auto</code>, <code>my-4</code>, <code>p-6</code>, <code
            >pt-8</code
          >
        </li>
        <li>
          <code>max-w-4xl</code>, <code>w-full</code>, <code>h-screen</code>
        </li>
      </ul>
    </div>

    <!-- Tekst og farge -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">🎨 Tekst & Farge</h2>
      <ul class="list-disc ml-6 text-sm leading-loose">
        <li>
          <code>text-sm</code>, <code>text-2xl</code>, <code>font-bold</code>
        </li>
        <li>
          <code>text-gray-700</code>, <code>bg-yellow-400</code>, <code
            >hover:bg-yellow-300</code
          >
        </li>
        <li>
          <code>rounded</code>, <code>shadow</code>, <code
            >transition duration-300</code
          >
        </li>
      </ul>
    </div>

    <!-- Responsiv -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">📱 Responsiv design</h2>
      <ul class="list-disc ml-6 text-sm leading-loose">
        <li>
          <code>sm:</code> (≥640px), <code>md:</code> (≥768px), <code>lg:</code>
          (≥1024px), <code>xl:</code> (≥1280px)
        </li>
        <li>
          F.eks. <code>text-sm md:text-lg</code>, <code>hidden md:flex</code>
        </li>
      </ul>
    </div>

    <!-- Eksempel -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-4">🧩 Seksjonseksempel</h2>
      <pre
        class="bg-gray-200 p-4 text-sm rounded overflow-x-auto">
&lt;section class="bg-yellow-400 text-black p-8 rounded"&gt;
  &lt;h2 class="text-2xl font-bold"&gt;Eksempelseksjon&lt;/h2&gt;
  &lt;p&gt;Innhold her...&lt;/p&gt;
&lt;/section&gt;
      </pre>
    </div>
  </section>
</Layout>
