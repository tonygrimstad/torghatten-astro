---
import Layout from "../layouts/Layout.astro";
import { useTranslations } from "../utils/useTranslations.ts";

const { t } = useTranslations(Astro.url);

// Prøv å bestemme språk fra URL
const urlLang = Astro.url.pathname.startsWith("/en/") ? "en" : "no";
---

<Layout
  title={urlLang === "en"
    ? "Page Not Found | Torghatten Maraton"
    : "Siden finnes ikke | Torghatten Maraton"}
  description={urlLang === "en"
    ? "The page you are looking for could not be found."
    : "Siden du leter etter finnes ikke."}
  lang={urlLang}
>
  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-2xl mx-auto">
      <!-- 404 illustrasjon -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-yellow-400 mb-4">404</h1>
        <div class="w-32 h-1 bg-yellow-400 mx-auto mb-8"></div>
      </div>

      <!-- Melding -->
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {urlLang === "en" ? "Page Not Found" : "Siden finnes ikke"}
      </h2>

      <p class="text-lg md:text-xl text-gray-300 mb-8">
        {
          urlLang === "en"
            ? "The page you are looking for might have been moved, deleted, or never existed."
            : "Siden du leter etter kan ha blitt flyttet, slettet eller aldri eksistert."
        }
      </p>

      <!-- Navigasjonsknapper -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={`/${urlLang}/`}
          class="inline-block px-8 py-3 bg-yellow-400 text-black font-semibold rounded-lg hover:bg-yellow-300 transition-colors"
        >
          {urlLang === "en" ? "Back to Home" : "Tilbake til forsiden"}
        </a>

        <a
          href={`/${urlLang}/distanser`}
          class="inline-block px-8 py-3 border-2 border-yellow-400 text-yellow-400 font-semibold rounded-lg hover:bg-yellow-400 hover:text-black transition-colors"
        >
          {urlLang === "en" ? "View Distances" : "Se distanser"}
        </a>
      </div>

      <!-- Nyttige lenker -->
      <div class="mt-12 pt-8 border-t border-gray-700">
        <p class="text-gray-400 mb-4">
          {
            urlLang === "en"
              ? "Or explore these pages:"
              : "Eller utforsk disse sidene:"
          }
        </p>
        <ul class="flex flex-wrap justify-center gap-4 text-sm">
          <li>
            <a
              href={`/${urlLang}/results`}
              class="text-yellow-400 hover:underline"
            >
              {urlLang === "en" ? "Results" : "Resultater"}
            </a>
          </li>
          <li>
            <a
              href={`/${urlLang}/gallery`}
              class="text-yellow-400 hover:underline"
            >
              {urlLang === "en" ? "Gallery" : "Galleri"}
            </a>
          </li>
          <li>
            <a
              href={`/${urlLang}/program`}
              class="text-yellow-400 hover:underline"
            >
              {urlLang === "en" ? "Program" : "Program"}
            </a>
          </li>
          <li>
            <a
              href={`/${urlLang === "en" ? "no" : "en"}/`}
              class="text-yellow-400 hover:underline"
            >
              {urlLang === "en" ? "Norsk" : "English"}
            </a>
          </li>
        </ul>
      </div>
    </div>
  </main>
</Layout>
