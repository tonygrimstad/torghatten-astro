---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../utils/useTranslations.ts";

export function getStaticPaths() {
  return [{ params: { lang: "no" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const { t, currentLang } = useTranslations(Astro.url);

// Validate language parameter
if (lang !== "no" && lang !== "en") {
  return Astro.redirect("/no/");
}

const title = t("nav.results", "Resultater");
const description = t(
  "results.pageDescription",
  "Se resultater fra alle Torghatten Maraton løp gjennom årene. Finn din tid og plassering fra tidligere løp.",
);

// Resultatdata - sortert etter år (nyeste først)
const results = [
  {
    year: "2026",
    url: "https://live.eqtiming.com/80036",
    status: t("results.upcoming", "Kommende løp"),
    isUpcoming: true,
    isEqTiming: true,
  },
  {
    year: "2025",
    url: "https://live.eqtiming.com/74867#result",
    status: t("results.current", "Seneste løp"),
    isEqTiming: true,
  },
  {
    year: "2024",
    url: "https://live.eqtiming.com/69716#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2023",
    url: "https://live.eqtiming.com/63885#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2019",
    url: "https://live.eqtiming.com/44345#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2018",
    url: "https://live.eqtiming.com/38389#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2017",
    url: "https://live.eqtiming.com/32266#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2016",
    url: "https://live.eqtiming.com/23192#result",
    status: undefined,
    isEqTiming: true,
  },
  {
    year: "2015",
    url: "/results/TorghattenMaraton2015_res.pdf",
    status: "PDF",
    isPdf: true,
    isEqTiming: false,
  },
];
---

<Layout
  lang={currentLang}
  title={`${title} - Torghatten Maraton`}
  description={description}
>
  <!-- Hero Section for Results -->
  <section
    class="bg-gradient-to-r from-green-600 via-emerald-600 to-teal-700 text-white py-20 mt-32 md:mt-36"
  >
    <div class="max-w-4xl mx-auto text-center px-6">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        {t("results.pageTitle", "Resultater & Tider")}
      </h1>
      <p class="text-xl md:text-2xl opacity-90 mb-8">
        {
          t(
            "results.subtitle",
            "Se resultater fra alle Torghatten Maraton løp gjennom årene",
          )
        }
      </p>
      <div class="w-24 h-1 bg-yellow-400 mx-auto"></div>
    </div>
  </section>

  <!-- Results Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          results.map((result) => (
            <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 group border border-gray-200">
              <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                  <h3 class="text-2xl font-bold text-gray-800 group-hover:text-green-600 transition-colors">
                    {result.year}
                  </h3>
                  {result.status && (
                    <span
                      class={`px-3 py-1 rounded-full text-xs font-medium ${
                        result.status === "PDF"
                          ? "bg-red-100 text-red-800"
                          : result.isUpcoming
                            ? "bg-blue-100 text-blue-800"
                            : result.status.includes("Seneste") ||
                                result.status.includes("Recent")
                              ? "bg-green-100 text-green-800"
                              : "bg-gray-100 text-gray-800"
                      }`}
                    >
                      {result.status}
                    </span>
                  )}
                </div>

                {result.isEqTiming && (
                  <div class="flex items-center gap-2 mb-3">
                    <img
                      src="/images/logos/EQ-Timing-logo.png"
                      alt="EQ Timing logo"
                      class="h-4 w-auto opacity-70"
                    />
                    <span class="text-xs text-gray-500">EQ Timing</span>
                  </div>
                )}

                <p class="text-gray-600 text-sm mb-6">
                  {result.isUpcoming
                    ? t("results.viewUpcoming", "Se påmelding og informasjon")
                    : t(
                        "results.viewResults",
                        "Se komplett resultatliste og tider",
                      )}
                </p>

                <a
                  href={result.url}
                  target={result.isPdf ? "_blank" : "_blank"}
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-full bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold py-3 px-4 rounded-lg hover:from-green-600 hover:to-emerald-700 transition-all duration-300 group"
                  aria-label={`Se resultater for ${result.year}`}
                >
                  <span>
                    {result.isUpcoming
                      ? t("results.viewUpcoming", "Se påmelding")
                      : t("results.viewButton", "Se resultater")}
                  </span>
                  {result.isPdf ? (
                    <svg
                      class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                      />
                    </svg>
                  ) : (
                    <svg
                      class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                      />
                    </svg>
                  )}
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Info Section -->
  <section class="py-12 bg-white border-t border-gray-200">
    <div class="max-w-3xl mx-auto text-center px-6">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">
        {t("results.infoTitle", "Finner du ikke resultatet ditt?")}
      </h2>
      <p class="text-gray-600 mb-6">
        {
          t(
            "results.infoText",
            "Kontakt oss hvis du har spørsmål om resultater eller ikke finner det du leter etter.",
          )
        }
      </p>
      <a
        href={`mailto:${t("footer.email")}`}
        class="inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        {t("results.contactUs", "Kontakt oss")}
      </a>
    </div>
  </section>
</Layout>
