---
import Layout from "../../layouts/Layout.astro";
import HelgelandslopenePage from "../../components/HelgelandslopenePage.astro";
import { useTranslations } from "../../utils/useTranslations";

export function getStaticPaths() {
  return [{ params: { lang: "no" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const { t, currentLang } = useTranslations(Astro.url);

// Validate language parameter
if (lang !== "no" && lang !== "en") {
  return Astro.redirect("/no/");
}
---

<Layout
  lang={currentLang}
  title={t("seo.helgelandRacesTitle")}
  description={t("seo.helgelandRacesDescription")}
>
  <HelgelandslopenePage lang={currentLang} />
</Layout>
