---
import FeatureSection from "../components/FeatureSection.astro";
import Layout from "../layouts/Layout.astro";
import HeroSectionDistanse from "../components/HeroSectionDistanse.astro";
import RaceProfile from "../components/RaceProfile.astro";
import ClassList from "../components/ClassList.astro";
import InfoSection from "../components/InfoSection.astro";
import DistancesSection from "../components/DistancesSection.astro";
import VideoSection from "../components/VideoSection.astro";
import Footer from "../components/footer.astro";
---

<Layout title="Trim" lang="no" light={true}>
  <HeroSectionDistanse
    distanse="🧑‍🦽🚶‍♂️ Trim"
    description="3,6 km, gå/jogg eller trill, ut på tur!"
    signupUrl="https://signup.eqtiming.com/arrangement/torghatten-maraton-2025/g295.48438?event=torghatten"
  />

  <RaceProfile
    kontrollmalt={false}
    kontrolltekst="Løypen er kontrollmålt av Norsk Friidrett – april 2022"
    kontrollbilde="/KontrollertLoype.png"
    tittel="📍 Løypeprofil"
    beskrivelse1="Trimmen følger samme løype som Minimaraton (og delvis samme løype som Øygaloppen). Løypa starter ved Nordhus skole, og går ned mot Toft."
    beskrivelse2="Løypa tar til høyre opp sykkelveien ved Solvang Toft ungdomshus. Sykkelstien følges ned mot Havbrukssenteret på Toft, og videre hovedveien tilbake til målgang på Nordhus stadion."
  />
  <ClassList
    tittel="Damer og Herrer:"
    klasser={["Ingen klasser - Alle aldre"]}
  />

  <VideoSection
    title="🎥 Se hele trimløypen"
    description="Få oversikt over traseen før løpet."
    videoUrl="https://www.youtube.com/embed/OdKvTpXfrgQ"
  />

  <FeatureSection feature="infoSection">
    <InfoSection />
  </FeatureSection>
  <DistancesSection />
  <Footer />
</Layout>
