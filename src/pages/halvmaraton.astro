---
import Layout from "../layouts/Layout.astro";
import HeroSectionDistanse from "../components/HeroSectionDistanse.astro";
import RaceProfile from "../components/RaceProfile.astro";
import ClassList from "../components/ClassList.astro";
import InfoSection from "../components/InfoSection.astro";
import DistancesSection from "../components/DistancesSection.astro";
import Top5recordsComponent from "../components/Top5recordsComponent.astro";
import halvmaratonRecords from "../data/top5_json/halvmaraton.json";
import VideoSection from "../components/VideoSection.astro";
---

<Layout title="Halvmaraton" lang="no" light={true}>
  <HeroSectionDistanse
    distanse="🏃‍♂️ Halvmaraton (21 098 m)"
    description="Halvmaratonløypen gir også mulighet for uforglemmelige naturopplevelser."
    signupUrl="https://signup.eqtiming.com/arrangement/torghatten-maraton-2025/g295.48438?event=torghatten"
  />

  <RaceProfile
    kontrollmalt={true}
    kontrolltekst="Løypen er kontrollmålt av Norsk Friidrett – april 2022"
    kontrollbilde="/KontrollertLoype.png"
    tittel="📍 Løypeprofil"
    beskrivelse1="Halvmaraton har start og mål på Nordhus Stadion. Løypen går i naturskjønne omgivelser langs Torgøyene og rundt det sagnomsuste fjellet Torghatten."
    beskrivelse2="Løypen er nokså flat. Starter ca 8 moh, høyeste punkt 32 moh etter 12,5 km. Jevn stigning og lett nedover til mål."
  />
  <ClassList
    tittel="Damer og Herrer:"
    klasser={[
      "16–17 år",
      "18–22 år",
      "23–34 år",
      "35–39 år",
      "40–44 år",
      "45–49 år",
      "50–54 år",
      "55–59 år",
      "60–64 år",
      "65–69 år",
      "70–74 år",
      "75–79 år",
      "80+",
    ]}
  />

  <Top5recordsComponent
    distanse="Halvmaraton"
    kjonn="K"
    data={halvmaratonRecords}
  />
  <Top5recordsComponent
    distanse="Helmaraton"
    kjonn="M"
    data={halvmaratonRecords}
  />
  <VideoSection
    title="🎥 Se hele halvmaratonløypen"
    description="Få oversikt over traseen før løpet."
    videoUrl="https://www.youtube.com/embed/sPpCKe2s94k"
  />

  <InfoSection />
  <DistancesSection />
</Layout>
