---
import Layout from "../layouts/Layout.astro";
import HeroSectionDistanse from "../components/HeroSectionDistanse.astro";
import RaceProfile from "../components/RaceProfile.astro";
import ClassList from "../components/ClassList.astro";
import InfoSection from "../components/InfoSection.astro";
import DistancesSection from "../components/DistancesSection.astro";
import Top5recordsComponent from "../components/Top5recordsComponent.astro";
import oygaloppenRecords from "../data/top5_json/oygaloppen_10_km.json";
import VideoSection from "../components/VideoSection.astro";
---

<Layout title="Øygaloppen" lang="no" light={true}>
  <HeroSectionDistanse
    distanse="🏃 Øygaloppen (10 000 m)"
    description="10 km, en rask og kupert trase - perfekt for personlige rekorder!"
    signupUrl="https://signup.eqtiming.com/arrangement/torghatten-maraton-2025/g295.48438?event=torghatten"
  />

  <RaceProfile
    kontrollmalt={true}
    kontrolltekst="Løypen er kontrollmålt av Norsk Friidrett – april 2022"
    kontrollbilde="/KontrollertLoype.png"
    tittel="📍 Løypeprofil"
    beskrivelse1="Øygaloppen følger samme løype som i Sør-Helgeland Løpskarusell, hvor det tradisjonsrike løpet har samme navn."
    beskrivelse2="Løypa starter ved Nordhus skole, går på asfalt i retning mot Torghatten hvor snupunktet er i siste bakke før Torgvatnan. Tilbake går turen forbi Nordhus skole og videre ned mot Toft. Løypa tar til høyre opp sykkelveien ved Solvang Toft ungdomshus. Sykkelstien følges ned mot Havbrukssenteret på Toft, og videre hovedveien tilbake til målgang på Nordhus stadion."
  />
  <ClassList
    tittel="Damer og Herrer:"
    klasser={[
      "12–13 år",
      "14–15 år",
      "16–17 år",
      "18–19 år",
      "20–22 år",
      "23–34 år",
      "35–39 år",
      "40–44 år",
      "45–49 år",
      "50–54 år",
      "55–59 år",
      "60–64 år",
      "65–69 år",
      "70–74 år",
      "75–79 år",
      "80+",
    ]}
  />

  <Top5recordsComponent
    distanse="Øygaloppen"
    kjonn="K"
    data={oygaloppenRecords}
  />
  <Top5recordsComponent
    distanse="Øygaloppen"
    kjonn="M"
    data={oygaloppenRecords}
  />
  <VideoSection
    title="🎥 Se hele Øygaloppen"
    description="Få oversikt over traseen før løpet."
    videoUrl="https://www.youtube.com/embed/LNofALhX42k"
  />

  <InfoSection />
  <DistancesSection />
</Layout>
