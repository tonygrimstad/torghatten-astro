---
import SignupButton from "./signupButton.astro";
import { isFeatureActive, getFeatureText } from "../config/siteConfig.ts";
---

<section
  class="relative min-h-screen bg-[url('/herosek-tmbru.jpg')] bg-cover bg-center bg-fixed text-white flex flex-col"
>
  <!-- Overlay for mørkere bakgrunn -->
  <div class="absolute inset-0 bg-black/60 z-0"></div>

  <!-- Logo -->
  <img
    src="/tm-logo.jpg"
    alt="Torghatten Maraton logo"
    class="absolute top-15 left-0 w-40 md:w-60 opacity-80 z-10 drop-shadow-md rounded-xl"
    style="box-shadow: 4px 4px 15px rgba(234, 179, 8, 0.5);"
  />

  <!-- Innhold -->
  <div
    class="relative z-10 flex flex-col flex-grow justify-start items-center px-4 pt-80 md:pt-80 pb-16 text-center"
  >
    <h1 class="text-4xl md:text-5xl font-bold mb-4 text-yellow-400">
      Torghatten Maraton
      {isFeatureActive("raceYear") && ` ${getFeatureText("raceYear")}`}
    </h1>

    <p class="text-lg md:text-xl mb-6 max-w-2xl">
      Opplev løpsglede rundt Torghatten
      {isFeatureActive("raceDate") && ` – ${getFeatureText("raceDate")}`}
    </p>

    <SignupButton />

    <!-- Paameldingsknapp
    <a
      href={signupUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-white text-black font-bold px-8 py-3 rounded-full shadow-lg hover:bg-yellow-300 transition"
    >-->
  </div>
</section>
