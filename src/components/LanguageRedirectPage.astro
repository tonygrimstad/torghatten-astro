---
import { useTranslations } from "../utils/useTranslations.ts";

const {
  redirectTo = "/no/", // Standard fallback
  lang = "no",
  title = "Torghatten Maraton",
  message = "Du blir videresendt...",
} = Astro.props;

const { t } = useTranslations(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="refresh" content={`0; url=${redirectTo}`} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-yellow-400 text-center p-10">
    <h1 class="text-2xl font-bold mb-4">{title}</h1>
    <p>
      {t("redirect.message")}
      <br />
      <a href={redirectTo} class="underline hover:text-yellow-300">
        {t("redirect.link")}{redirectTo}
      </a>
    </p>
  </body>
</html>
