---
import FeatureSection from "../components/FeatureSection.astro";
import Layout from "../layouts/Layout.astro";
import HeroSectionDistanse from "../components/HeroSectionDistanse.astro";
import RaceProfile from "../components/RaceProfile.astro";
import ClassList from "../components/ClassList.astro";
import InfoSection from "../components/InfoSection.astro";
import DistancesSection from "../components/DistancesSection.astro";
import Top5recordsComponent from "../components/Top5recordsComponent.astro";
import oygaloppenRecords from "../data/top5_json/oygaloppen_10_km.json";
import VideoSection from "../components/VideoSection.astro";
import Footer from "../components/footer.astro";
import { useTranslations } from "../utils/useTranslations.ts";

const { t, currentLang } = useTranslations(Astro.url);
---

<Layout title={t("nav.Øygaloppen (10 km)")} lang={currentLang} light={true}>
  <HeroSectionDistanse
    distanse={`🏃 ${t("nav.Øygaloppen (10 km)")}`}
    description={t("oygaloppen.description")}
    signupUrl="https://signup.eqtiming.com/arrangement/torghatten-maraton-2025/g295.48438?event=torghatten"
  />

  <RaceProfile
    kontrollmalt={true}
    kontrolltekst={t("oygaloppen.certified")}
    kontrollbilde="/KontrollertLoype.png"
    tittel={t("oygaloppen.profileTitle")}
    beskrivelse1={t("oygaloppen.description1")}
    beskrivelse2={t("oygaloppen.description2")}
  />

  <ClassList
    tittel={t("oygaloppen.classTitle")}
    klasser={[
      "12–13 år",
      "14–15 år",
      "16–17 år",
      "18–19 år",
      "20–22 år",
      "23–34 år",
      "35–39 år",
      "40–44 år",
      "45–49 år",
      "50–54 år",
      "55–59 år",
      "60–64 år",
      "65–69 år",
      "70–74 år",
      "75–79 år",
      "80+",
    ]}
  />

  <Top5recordsComponent
    distanse={t("nav.Øygaloppen")}
    kjonn="K"
    data={oygaloppenRecords}
  />
  <Top5recordsComponent
    distanse={t("nav.Øygaloppen")}
    kjonn="M"
    data={oygaloppenRecords}
  />

  <VideoSection
    title={t("oygaloppen.videoTitle")}
    description={t("oygaloppen.videoDescription")}
    videoUrl="https://www.youtube.com/embed/LNofALhX42k"
  />

  <FeatureSection feature="infoSection">
    <InfoSection />
  </FeatureSection>
  <DistancesSection current="Øygaloppen (10 km)" />
  <Footer />
</Layout>
