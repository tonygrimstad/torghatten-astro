        </span>
      </div>
      <div class="w-32 h-1 bg-yellow-400 mx-auto shadow-lg mt-8"></div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Distances Grid -->
  <section class="py-20 bg-linear-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
        {distances.map((distance, index) => (
          <div class={`group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 bg-linear-to-br ${distance.color}`}>
            <!-- Background Pattern -->
            <div class="absolute inset-0 bg-linear-to-br from-black/10 to-black/30 group-hover:from-black/20 group-hover:to-black/40 transition-all duration-300"></div>

            <!-- Content -->
            <div class="relative z-10 p-8 text-white min-h-80 flex flex-col">
              <!-- Header -->
              <div class="flex items-start justify-between mb-6">
                <div class="text-4xl" aria-label={distance.title}>{distance.icon}</div>
                <div class="flex flex-col items-end gap-2">
                  {distance.certified && (
                    <span class="bg-white/20 text-xs px-2 py-1 rounded-full backdrop-blur-sm">
                      ‚úì {t("distances.controlled", "Kontrollm√•lt")}
                    </span>
                  )}
                  {distance.timed && (
                    <span class="bg-white/20 text-xs px-2 py-1 rounded-full backdrop-blur-sm">
                      ‚è±Ô∏è {t("distances.timed", "Tidtatt")}
                    </span>
                  )}
                </div>
              </div>

              <!-- Title and Distance -->
              <div class="mb-6">
                <h3 class="text-2xl md:text-3xl font-bold mb-2">{distance.title}</h3>
                <p class="text-xl opacity-90 font-semibold">{distance.subtitle}</p>
              </div>

              <!-- Description -->
              <p class="text-white/90 mb-6 leading-relaxed grow">
                {distance.description}
              </p>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
                <div class="bg-white/10 p-3 rounded-lg backdrop-blur-sm">
                  <div class="font-semibold opacity-80">{t("distances.difficulty", "Vanskelighet")}</div>
                  <div>{distance.difficulty}</div>
                </div>
                <div class="bg-white/10 p-3 rounded-lg backdrop-blur-sm">
                  <div class="font-semibold opacity-80">{t("distances.registrationFee", "Deltageravgift")}</div>
                  <div>{distance.participants}</div>
                </div>
              </div>

              <!-- Action Buttons -->
