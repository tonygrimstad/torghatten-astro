                  href="https://signup.eqtiming.com/?Event=Torghatten&lang=norwegian"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center bg-white/20 hover:bg-white/30 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-300 group-hover:scale-105 backdrop-blur-sm border border-white/20 hover:border-white/40 text-sm"
                  aria-label={`${t("distances.register", "Meld deg p√•")} ${distance.title}`}
