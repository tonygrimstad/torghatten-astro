  <!-- Hero Section with Random Background -->
  <section
    id="distanser-hero"
    class="relative min-h-[60vh] md:min-h-[70vh] flex items-center justify-center text-white mt-20 md:mt-24"
  >
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-linear-to-br from-blue-900/80 via-emerald-800/70 to-teal-700/80"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto text-center px-6 py-16">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 drop-shadow-lg">
        {t("distances.title", "V√•re Distanser")}
      </h1>
      <p class="text-xl md:text-2xl opacity-95 mb-8 max-w-3xl mx-auto drop-shadow-md">
