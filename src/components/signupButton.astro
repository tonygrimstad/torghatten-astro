---
import {
  isFeatureActive,
  getFeatureUrl,
  getFeatureText,
} from "../config/siteConfig.ts";
import { useTranslations } from "../utils/useTranslations.ts";
const { t } = useTranslations(Astro.url);
---

{
  isFeatureActive("signupButton") && (
    <section class="text-center my-8">
      <a
        href={getFeatureUrl("signupButton")}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-white text-black font-bold px-8 py-3 rounded-full shadow-lg hover:bg-yellow-300 transition"
      >
        {getFeatureText("signupButton") || t("signup.button")}
      </a>
    </section>
  )
}
