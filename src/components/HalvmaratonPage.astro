---
import { classGroups } from "../config/classGroups.ts";
import FeatureSection from "../components/FeatureSection.astro";
import Layout from "../layouts/Layout.astro";
import HeroSectionDistanse from "../components/HeroSectionDistanse.astro";
import RaceProfile from "../components/RaceProfile.astro";
import ClassList from "../components/ClassList.astro";
import InfoSection from "../components/InfoSection.astro";
import DistancesSection from "../components/DistancesSection.astro";
import Top5recordsComponent from "../components/Top5recordsComponent.astro";
import halvmaratonRecords from "../data/top5_json/halvmaraton.json";
import VideoSection from "../components/VideoSection.astro";
import SponsorSection from "../components/SponsorSection.astro";
import Footer from "../components/footer.astro";
import { useTranslations } from "../utils/useTranslations.ts";

const { t, currentLang } = useTranslations(Astro.url);
---

<Layout
  title={t("seo.halfMarathonTitle")}
  description={t("halvmaraton.description")}
  lang={currentLang}
  light={true}
>
  <!-- Seksjoner med alternerende bakgrunner for visuell rytme -->
  <HeroSectionDistanse
    distanse={`ðŸƒâ€â™‚ï¸ ${t("nav.halfMarathon")} (21 098 m)`}
    description={t("halvmaraton.description")}
  />

  <!-- Lys seksjon -->
  <div class="relative bg-white/95 backdrop-blur-sm">
    <RaceProfile
      kontrollmalt={true}
      kontrolltekst={t("halvmaraton.certified")}
      kontrollbilde="/KontrollertLoype.png"
      tittel={t("halvmaraton.profileTitle")}
      beskrivelse1={t("halvmaraton.description1")}
      beskrivelse2={t("halvmaraton.description2")}
    />
  </div>

  <!-- Lys seksjon for klasser -->
  <div
    class="relative bg-linear-to-br from-white/90 to-gray-50/95 backdrop-blur-sm"
  >
    <ClassList
      tittel={t("helmaraton.classTitle")}
      klasser={classGroups.halvmaraton}
    />
  </div>

  <FeatureSection feature="recordsSection">
    <Top5recordsComponent
      distanse={t("nav.halfMarathon", "Halvmaraton") || "Halvmaraton"}
      kjonn="K"
      data={halvmaratonRecords}
    />
    <Top5recordsComponent
      distanse={t("nav.halfMarathon", "Halvmaraton") || "Halvmaraton"}
      kjonn="M"
      data={halvmaratonRecords}
    />
  </FeatureSection>

  <FeatureSection feature="videoSection">
    <VideoSection
      title={t("halvmaraton.videoTitle")}
      description={t("halvmaraton.videoDescription")}
      videoUrl="https://www.youtube.com/embed/sPpCKe2s94k"
    />
  </FeatureSection>

  <FeatureSection feature="infoSection">
    <div class="relative bg-white/95 backdrop-blur-sm">
      <InfoSection />
    </div>
  </FeatureSection>

  <!-- Lys seksjon for distanser -->
  <div class="relative bg-white/95 backdrop-blur-sm">
    <DistancesSection current="Halvmaraton" />
  </div>

  <FeatureSection feature="SponsorerAlleSider">
    <SponsorSection variant="minimal" maxLogos={8} showViewAllLink={true} />
  </FeatureSection>

  <Footer />
</Layout>
