---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { useTranslations } from "../utils/useTranslations.ts";

const { light = false, title, description, lang = "no" } = Astro.props;
const bodyClass = light
  ? "bg-white text-black"
  : "bg-neutral-900 text-yellow-400";

const { t } = useTranslations(Astro.url);
const pageTitle = title || t("seo.defaultTitle");
const pageDescription = description || t("seo.defaultDescription");
---

<!doctype html>
<html lang={lang}>
  <script src="https://cdn.jsdelivr.net/npm/fslightbox/index.js" defer></script>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Favicon og ikoner -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/manifest.json" />

  <meta name="generator" content={Astro.generator} />

  <!-- SEO Meta Tags -->
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:image" content="/torghatten20150217_1600.jpg" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={Astro.url} />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={pageDescription} />
  <meta name="twitter:image" content="/torghatten20150217_1600.jpg" />


  <body
    class={`bg-fixed bg-[url('/torghatten20150217_1600.jpg')] bg-cover bg-center ${bodyClass}`}
  >
    <Header />
    <main class="pt-0" backdrop-blur-sm>
      <slot />
    </main>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
